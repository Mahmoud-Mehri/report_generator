<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_barnameh_back"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_margin="1dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="3dp">

        <CheckBox
            android:id="@+id/item_barnameh_smschbox"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:button="@drawable/checkboxselector"
            android:checked="false"
            android:freezesText="true"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/item_barnameh_ladingnotxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_barnameh_carnotxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_barnameh_datetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_barnameh_weighttxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_barnameh_safitxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>