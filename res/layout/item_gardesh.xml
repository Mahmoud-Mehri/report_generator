<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_gardesh_back"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:layout_margin="1dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/item_gardesh_smschbox"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:button="@drawable/checkboxselector"
            android:checked="false"
            android:freezesText="true"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/item_gardesh_accnumbertxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_gardesh_accnametxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/item_gardesh_phonetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2.2"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_gardesh_pricetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_gardesh_statustxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>